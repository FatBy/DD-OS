{
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-filesystem-server", "."],
      "enabled": false,
      "_comment": "启用后可访问当前目录的文件系统"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-github-server"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "enabled": false,
      "_comment": "需要设置 GITHUB_TOKEN 环境变量"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "enabled": false,
      "_comment": "需要 Brave Search API Key"
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-sqlite-server", "data/app.db"],
      "enabled": false,
      "_comment": "SQLite 数据库访问"
    }
  }
}
